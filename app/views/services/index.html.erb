<div class="container mt-3">
  <h1>Services index</h1>
  <% @services.each do |service|%>
  <tr>
    <td> <%= service.user_id %></td>
    <br>
    <td><%= link_to service.description, service_path(service.id) %></td>
    <br>
  </tr>
    <br>
  <% end %>
  <br>
  <% if policy(Service).new? %>
    <%= link_to "Create a service", new_service_path %>
  <% end %>
  </div>

